<?xml version="1.0" encoding="UTF-8"?>
<job id="importmatches" xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
     version="1.0">
    <properties>
        <property name="downloadUrl" value="http://int.soccerway.com/national/bulgaria/a-pfg/20142015/regular-season/r25721/matches/"/>
        <property name="targetFile" value="./matches.html"/>
    </properties>
    <step id="download" next="import">
        <batchlet ref="MatchesDownloader"></batchlet>
    </step>
    <step id="import">
        <chunk checkpoint-policy="item" item-count="3">
            <reader ref="MatchesReader"></reader>
            <processor ref="MatchesProcessor"></processor>
            <writer ref="MatchesWriter"></writer>
       </chunk>    
    </step>
</job>